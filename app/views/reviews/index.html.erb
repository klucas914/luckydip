<p>
<div class="container">
  <div align="center">
    <%= link_to image_tag("luckydip.png", alt: "LuckyDip logo") %>
    <p>
  <div class="card">
    <div class="card-block">
      <h1 class="card-title">Reviews</h1>

<p>
<p class="card-text">
<%= link_to 'New Review', new_review_path, class: 'btn btn-success' %>
<p>
<table class="table table-striped">
  
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%#= @review.location_id %></td>
        <td><%= review.comments %>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</p>

</div>
</div>
</div>