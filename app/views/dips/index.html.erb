<p>
<div class="container">
<h1>Dips</h1>

<table class="table table striped">
  <thead>
    <tr>
      <th>Mood for</th>
      <th>Type of Place</th>
      <th>Distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dips.each do |dip| %>
      <tr>
        <td><%= dip.activity.name %></td>
        <td><%= dip.location_type.name %></td>
        <td><%= dip.distance %> km</td>
        <td><%= link_to 'Show', dip %></td>
        <% if current_user.try(:admin?) %>
        <td><%= link_to 'Edit', edit_dip_path(dip) %></td>
        <td><%= link_to 'Destroy', dip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dip', new_dip_path %>
<p>
</div>