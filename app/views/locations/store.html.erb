<div class="container-fluid">
  <div class="row">
    <div align="center"><%= link_to image_tag("luckydiplogo2.png"), new_dip_path %>
   <h1 class>Saved Locations</h1>
   </div>
  </div>
  
  <div class="row">
    <div align="center">
      <div class="container">
  <% @locations.each do |location| %>
  <p>
  <div class="card" style="width: 20rem;">
    <div class="card-block">
      <h3><%= link_to location.name, location %></h3>
   
      <p><%= location.address %></p>

      <p><strong>Distance Away:</strong></p>

    <%= link_to 'Check In', class: "btn btn-primary" %><br>
    <p><%= link_to 'Leave a Review', new_review_path, class: "btn btn-primary" %></p>
    <%= link_to 'Remove', unsave_location_path(location), method: :unsave, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <% end %>  
  </div>

  
</div>
</div>
</div>