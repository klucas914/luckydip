<div class="container-fluid">
<p>
<div class="card">
  <div class="card-block">
  <p>
  <%= button_to 'Save Location', save_location_path, class: "btn btn-primary" %><br>
    <div class="row">
     
        <p>

        
        <div class="container"> 
         <p>
          
          <h1><%= @location.name %></h1><br />

          <h4><%= @location.address %></h4><br />
          <p><%= @location.description %></p><br>


<div class="card text-center">
  <div class="card-header">
    
    <ul class="nav nav-pills card-header-pills">
      <li class="Things to do">
        <a class="nav-link" href="#Activities">Things To Do</a>
       </li>
      <li class="Directoins">
        <a class="nav-link" href="#Directions">Directions</a>
      </li>
      <li class="Reviews">
        <a class="nav-link" href="#Reviews">Reviews</a>
      </li>
    </ul>
  </div>
  
  <div class="card-block" id="Activities">
           <h4 class="card-title"><h4>Activities:</h4>
              <% @location.activities.each do |activity| %>
              <%= activity.name %><br />
              <% end %>
             <br>
            <h4>Location Type:</h4>
              <% @location.location_types.each do |location_type| %>
              <%= location_type.name %><br />
            <% end %>
            </p>
    </div>
  <div class="card-block" id="Directions">
    <h4 class="card-title"><h4>Directions</h4>
              <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?center=#{@location.latitude},#{@location.longitude}&markers=#{@location.latitude},#{@location.longitude}&zoom=13&size=640x400&key=AIzaSyA4BHW3txEdqfxzdTlPwaHsYRSZbfeIcd8",
              class: 'img-fluid img-rounded', alt: "#{@location.name} on the map"%>
<p>
              <h5><%= link_to 'Get Directions' %></h5><br>
    </div>
    <div class="card-block" id="Reviews">
    <h4 class="card-title">
          <h4>Reviews for <%= @location.name %></h4><br>
        <div class="panel panel-default">
          <%= @reviews.each do |review| %>
            <div class="panel-heading"><%= review.created_at.strftime("%B %e, %Y at %I:%M %p") %></div><br>
            <div class="panel-body"><%= review.comments %></div><br>
          <% end %>
        </div>    
    </div>
</div>


          


        
      </div>
    </div>
  </div>
</div>
</div>