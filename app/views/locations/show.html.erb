<div class="container-fluid">
<p>
<div class="card">
  <div class="card-block">
  <p>
  <%#= button_to 'Save Location', save_location_path, class: "btn btn-primary" %><br>
  <% unless current_user and current_user.locations.include?(@location) %>
  <%= button_to 'Save Location', save_location_path, class: "btn btn-primary" %><br>
  <% end %>
    <div class="row">
     
        <p>

        
        <div class="container"> 
         <p>
          
          <h1><%= @location.name %></h1><br />

          <h4><%= @location.address %></h4><br />
          <p><%= @location.description %></p><br>
<div id="accordion" role="tablist" aria-multiselectable="true">
  
  <div class="card">
    <div class="card-header" role="tab" id="headingOne">
      <h5 class="mb-0">
        <a data-toggle="collapse" data-parent="#Activities" href="#Activities" aria-expanded="true" aria-controls="collapseOne">
          Things To Do
        </a>
      </h5>
    </div>
    <div id="Activities" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
      <div class="card-block">
           <h4 class="card-title"><h4>Activities:</h4>
              <% @location.activities.each do |activity| %>
              <%= activity.name %><br />
              <% end %>
             <br>
            <h4>Location Type:</h4>
              <% @location.location_types.each do |location_type| %>
              <%= location_type.name %><br />
            <% end %>
            </p>
      </div>
    </div>
  </div>
  
  <div class="card">
    <div class="card-header" role="tab" id="headingTwo">
      <h5 class="mb-0">
        <a class="collapsed" data-toggle="collapse" data-parent="#Directions" href="#Directions" aria-expanded="false" aria-controls="collapseTwo">
          Map It
        </a>
      </h5>
    </div>
    <div id="Directions" class="collapse" role="tabpanel" aria-labelledby="headingTwo">
      <div class="card-block">
          <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?center=#{@location.latitude},#{@location.longitude}&markers=#{@location.latitude},#{@location.longitude}&zoom=13&size=640x400&key=AIzaSyA4BHW3txEdqfxzdTlPwaHsYRSZbfeIcd8",
            class: 'img-fluid img-rounded', alt: "#{@location.name} on the map"%>
         <p>

         <!--<iframe width="600" height="400" frameborder="0" style="border:0"
         src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCySx-U3_icPnHJ-dFYZ9UAYlCOpc5zXGo&q=place_id:#{@location.place_id}"
         allowfullscreen>
         </iframe>-->
         <h5><%#= link_to 'Get Directions' %></h5><br>
      </div>
    </div>
  </div>
  
  <div class="card">
    <div class="card-header" role="tab" id="headingThree">
      <h5 class="mb-0">
        <a class="collapsed" data-toggle="collapse" data-parent="#Reviews" href="#Reviews" aria-expanded="false" aria-controls="collapseThree">
          Reviews
        </a>
      </h5>
    </div>
    <div id="Reviews" class="collapse" role="tabpanel" aria-labelledby="headingThree">
      <div class="card-block">
            <div class="panel panel-default">
              <% @reviews.each do |review| %>
                <div class="panel-heading"><strong>Review by <%= review.user.try(:name) %> at <%= review.created_at.strftime("%B %e, %Y at %I:%M %p") %></strong></div><br>
                <div class="panel-body"><%= review.comments %></div><br>
            <% end %>
            </div>    
      </div>
    </div>
  </div>
</div>

 
  
  

          


        
      </div>
    </div>
  </div>
</div>
</div>