<div class="container">
<p>
<div class="container">
  <div align="center">
    <%= link_to image_tag("luckydiplogo2.png") %>
    <h1>Activities</h1>
    <p>
    <%= link_to 'New Activity', new_activity_path, class: 'btn btn-primary' %>
  </div>

  <div class="card">
    <div class="card-block">
      
    <table class="table table-striped">
  
  <tbody>
    <tr>
      <th>Name</th>
      <th>Hidden?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @activities.each do |activity| %>

      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.hidden %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if activity.hidden? %>
        <td><%= button_to 'Unhide from users', unhide_activity_path(activity), method: :unhide, class: "btn btn-success" %>
        <% else %>
        <td><%= button_to 'Hide from users', hide_activity_path(activity), method: :hide, class: "btn btn-danger" %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>


<br>
</p>

</div>
</div>
</div>
